<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- pos.order -->
        <record model="ir.ui.view" id="inherited_pos_order_view_form">
            <field name="name">inherited.pos.order.view.form</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
            <field name="arch" type="xml">

                <xpath expr="//page[@name='products']/group[@name='order_total']/field[@name='amount_tax']" position="after">
                    <field name="total_extra_fee" force_save="1" widget="monetary" attrs="{'invisible': [('total_extra_fee', '=', 0)]}"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>