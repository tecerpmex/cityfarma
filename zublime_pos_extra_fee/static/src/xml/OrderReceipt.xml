<?xml version="1.0" encoding="UTF-8"?>

<templates id="template" xml:space="preserve">
    <t t-name="OrderReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension" owl="1">

        <xpath expr="//t[@t-if='!isTaxIncluded']" position="after">
            <t t-if="receipt.total_extra_fee > 0">
                <div t-if="isTaxIncluded" class="pos-receipt-right-align">--------</div>
                <div>
                    Total Extra Fee<span t-esc="env.pos.format_currency(receipt.total_extra_fee)" class="pos-receipt-right-align"/>
                </div>
            </t>
        </xpath>
        
    </t>
</templates>