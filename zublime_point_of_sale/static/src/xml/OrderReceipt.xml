<?xml version="1.0" encoding="UTF-8"?>

<templates id="template" xml:space="preserve">
    <t t-name="OrderReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension" owl="1">

        <xpath expr="//div[hasclass('before-footer')]" position="before">
            <t t-if="receipt.total_extra_fee > 0">
                <div class="pos-receipt-right-align">--------</div>
                <br/>
                <div>
                    Card payment commission (3.5%)<span t-esc="env.pos.format_currency(receipt.total_extra_fee)" class="pos-receipt-right-align"/>
                </div>
                <br/>
                <div class="pos-receipt-amount">
                    TOTAL TO PAY <span t-esc="env.pos.format_currency(receipt.total_with_tax + receipt.total_extra_fee)" class="pos-receipt-right-align"/>
                </div>
            </t>
        </xpath>

    </t>
</templates>