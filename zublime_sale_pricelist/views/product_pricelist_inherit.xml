<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="product_pricelist_form_inherit" model="ir.ui.view">
            <field name="name">product.pricelist.inherit.form</field>
            <field name="model">product.pricelist.item</field>
            <field name="inherit_id" ref="product.product_pricelist_item_form_view"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='fixed_price']" position="after">
                    <field name="cost" attrs="{'invisible':[('compute_price', '!=', 'fixed')]}"/>
                </xpath>
            </field>
        </record>

        <record id="product_pricelist_tree_inherit" model="ir.ui.view">
            <field name="name">product.pricelist.inherit.tree</field>
            <field name="model">product.pricelist.item</field>
            <field name="inherit_id" ref="product.product_pricelist_item_tree_view_from_product"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="before">
                    <field name="barcode" string="Bar Code" readonly="True"/>
                </xpath>
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="cost" string="Cost" readonly="True" force_save="1"/>
                    <field name="list_price" string="Sales Price" readonly="True" force_save="1"/>
                </xpath>
                <xpath expr="//field[@name='fixed_price']" position="after">
                    <field name="utilidad" string="Margin in %" readonly="True" force_save="1"/>
                    <field name="margin" string="Margin" readonly="True" force_save="1"/>
                    <field name="taxes_ids" widget="many2many_tags" string="Taxes" readonly="True" force_save="1"/>
                </xpath>

            </field>
        </record>

        <record id="product_pricelist_tree_inherit_view" model="ir.ui.view">
            <field name="name">product.pricelist.inherit.tree</field>
            <field name="model">product.pricelist.item</field>
            <field name="inherit_id" ref="product.product_pricelist_item_tree_view"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="before">
                    <field name="barcode" string="Bar Code" readonly="True"/>
                </xpath>
                <xpath expr="//field[@name='name']" position="after">
                    <field name="cost" string="Cost" readonly="True" force_save="1"/>
                    <field name="list_price" string="Sales Price" readonly="True" force_save="1"/>
                </xpath>
                <xpath expr="//field[@name='min_quantity']" position="after">
                    <field name="utilidad" string="Margin in %" readonly="True" force_save="1"/>
                    <field name="margin" string="Margin" readonly="True" force_save="1"/>
                    <field name="taxes_ids" widget="many2many_tags" string="Taxes" readonly="True" force_save="1"/>
                </xpath>
            </field>
        </record>

        <record id="product_pricelist_inherit_form" model="ir.ui.view">
            <field name="name">product.pricelist.inherit.form</field>
            <field name="model">product.pricelist</field>
            <field name="inherit_id" ref="product.product_pricelist_view"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='item_ids']/tree/field[@name='product_id']" position="before">
                    <field name="barcode" string="Bar Code" readonly="True"/>
                </xpath>
                <xpath expr="//field[@name='item_ids']/tree/field[@name='product_id']" position="after">
                    <field name="cost" string="Cost" readonly="True" force_save="1"/>
                    <field name="list_price" string="Sales Price" readonly="True" force_save="1"/>
                </xpath>
                <xpath expr="//field[@name='item_ids']/tree/field[@name='fixed_price']" position="after">
                    <field name="utilidad" string="Margin in %" readonly="True" force_save="1"/>
                    <field name="margin" string="Margin" readonly="True" force_save="1"/>
                    <field name="taxes_ids" widget="many2many_tags" string="Taxes" readonly="True" force_save="1"/>
                </xpath>

            </field>
        </record>

        <record id="product_pricelist_inherit_form_inherit" model="ir.ui.view">
            <field name="name">product.pricelist.inherit.form</field>
            <field name="model">product.pricelist</field>
            <field name="inherit_id" ref="product.product_pricelist_view_inherit"/>
            <field name="priority" eval="18"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="attributes">
                    <attribute name="default_order">name desc</attribute>
                </xpath>
                <xpath expr="//field[@name='item_ids']/tree/field[@name='name']" position="before">
                    <field name="barcode" string="Bar Code" readonly="True"/>
                </xpath>
                <xpath expr="//field[@name='item_ids']/tree/field[@name='name']" position="after">
                    <field name="cost" string="Cost" readonly="True" force_save="1"/>
                    <field name="list_price" string="Sales Price" readonly="True" force_save="1"/>
                </xpath>
                <xpath expr="//field[@name='item_ids']/tree/field[@name='price']" position="after">
                    <field name="utilidad" string="Margin in %" readonly="True" force_save="1"/>
                    <field name="margin" string="Margin" readonly="True" force_save="1"/>
                    <field name="taxes_ids" widget="many2many_tags" string="Taxes" readonly="True" force_save="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>