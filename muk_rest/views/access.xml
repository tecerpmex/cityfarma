<?xml version="1.0" encoding="UTF-8"?>

<odoo>

	<record id="view_rest_access_tree" model="ir.ui.view">
		<field name="name">muk_rest_access.tree</field>
		<field name="model">muk_rest.access</field>
		<field name="arch" type="xml">
			<tree string="Rules">
				<field name="model"/>
				<field name="perm_read"/>
				<field name="perm_write"/>
				<field name="perm_create"/>
				<field name="perm_unlink"/>
				<field name="oauth"/>
				<field name="active"/>
			</tree>
		</field>
	</record>
	
	<record id="view_rest_access_form" model="ir.ui.view">
		<field name="name">muk_rest_access.form</field>
		<field name="model">muk_rest.access</field>
		<field name="arch" type="xml">
			<form string="Rule">
				<sheet>
				    <div class="oe_button_box" name="button_box">
				        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-bell">
				            <field name="active" widget="boolean_button"/>
				        </button>
				    </div>
			        <div class="oe_title">
			            <label for="oauth" class="oe_edit_only"/>
			            <h1>
			            	<field name="oauth" placeholder="e.g. MyApp"/>
			            </h1>
			        </div>
			        <group>
				        <group>
				        	<field name="model"/>
				        </group>
			        </group>
			        <group>
				        <group>
				        	<field name="perm_read"/>
				        	<field name="perm_write"/>
				        </group>
				        <group>
				        	<field name="perm_create"/>
				        	<field name="perm_unlink"/>
				        </group>
			        </group>
				</sheet>
			</form>
		</field>
	</record>
	
	<record id="action_rest_access" model="ir.actions.act_window">
		<field name="name">Rules</field>
		<field name="res_model">muk_rest.access</field>
		<field name="view_mode">tree</field>
		<field name="help" type="html">
		    <p class="o_view_nocontent_smiling_face">
                Create a new Configuration Access Rules
            </p>
            <p>
                Access rules are used to restrict Restful API configurations.
            </p>
	    </field>
	</record>

	<menuitem id="menu_rest_access" name="Rules" sequence="5"
		parent="cat_menu_rest_technical" action="action_rest_access" />
	
</odoo>