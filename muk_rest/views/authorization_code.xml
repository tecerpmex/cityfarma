<?xml version="1.0" encoding="UTF-8"?>


<odoo>
	
	<record id="search_rest_authorization_code" model="ir.ui.view">
		<field name="name">muk_rest_authorization_code.search</field>
		<field name="model">muk_rest.authorization_code</field>
		<field name="arch" type="xml">
			<search>
				<field name="oauth" />
				<field name="user" />
				<group expand="0" name="group_by" string="Group By">
					<filter name="group_by_user" string="User" domain="[]" context="{'group_by': 'user'}"/>
					<filter name="group_by_oauth" string="OAuth" domain="[]" context="{'group_by': 'oauth'}"/>
				</group>
			</search>
		</field>
	</record>
	
	<record id="view_rest_authorization_code_tree" model="ir.ui.view">
		<field name="name">muk_rest_authorization_code.tree</field>
		<field name="model">muk_rest.authorization_code</field>
		<field name="arch" type="xml">
			<tree string="Authorization Codes">
				<field name="oauth"/>
				<field name="callback"/>
				<field name="user" groups="base.group_system"/>
				<field name="create_date"/>
			</tree>
		</field>
	</record>
	
	<record id="view_rest_authorization_code_form" model="ir.ui.view">
		<field name="name">muk_rest_authorization_code.form</field>
		<field name="model">muk_rest.authorization_code</field>
		<field name="arch" type="xml">
			<form string="Authorization Code">
				<sheet>
					<group>
				        <group>
				        	<field name="oauth"/>
				        	<field name="code" password="True" readonly="1"/>
				        </group>
				        <group>
				        	<field name="callback"/>
							<field name="user" groups="base.group_system"/>
				        </group>
					</group>
				</sheet>
			</form>
		</field>
	</record>

	<record id="action_rest_authorization_code" model="ir.actions.act_window">
		<field name="name">Authorization Codes</field>
		<field name="res_model">muk_rest.authorization_code</field>
		<field name="view_mode">tree</field>
		<field name="help" type="html">
		    <p class="o_view_nocontent_smiling_face">
                OAuth2 Authorization Code
            </p>	
            <p>
                Authorization Codes are used to authenticate a user with the server.
            </p>
	    </field>
	</record>

	<menuitem id="menu_rest_authorization_code" name="Authorization Codes" sequence="5"
		parent="cat_menu_rest_tokens" action="action_rest_authorization_code" />
	
</odoo>