<?xml version="1.0" encoding="UTF-8"?>

<odoo>
	
	<record id="search_rest_oauth1_search" model="ir.ui.view">
	    <field name="name">muk_rest_oauth1.search</field>
		<field name="model">muk_rest.oauth1</field>
	    <field name="mode">primary</field>
	    <field name="inherit_id" ref="search_rest_oauth"/>
	    <field name="arch" type="xml">
	    	<xpath expr="." position="inside"></xpath>
	    </field>
	</record>

	<record id="view_rest_oauth1_tree" model="ir.ui.view">
		<field name="name">muk_rest_oauth1.tree</field>
		<field name="model">muk_rest.oauth1</field>
	    <field name="mode">primary</field>
	    <field name="inherit_id" ref="view_rest_oauth_tree"/>
		<field name="arch" type="xml">
			<xpath expr="." position="inside"></xpath>
		</field>
	</record>
	
	<record id="view_rest_oauth1_form" model="ir.ui.view">
		<field name="name">muk_rest_oauth1.form</field>
		<field name="model">muk_rest.oauth1</field>
	    <field name="mode">primary</field>
	    <field name="inherit_id" ref="view_rest_oauth_form"/>
		<field name="arch" type="xml">
			<xpath expr="//group[@name='data']" position="inside">
				<field name="consumer_key" widget="CopyClipboardChar" />
				<field name="consumer_secret" widget="CopyClipboardChar" />
			</xpath>
		</field>
	</record>
	
	<record id="action_rest_oauth1" model="ir.actions.act_window">
		<field name="name">OAuth1</field>
		<field name="res_model">muk_rest.oauth1</field>
		<field name="view_mode">tree,form</field>
		<field name="help" type="html">
		    <p class="o_view_nocontent_smiling_face">
                Create a new OAuth1 setting
            </p><p>
                An OAuth1 setting can be used to connect to the system via the Restful API.
            </p>
	    </field>
	</record>

	<menuitem id="menu_rest_oauth1" name="OAuth1" sequence="5"
		parent="cat_menu_rest_configuration" action="action_rest_oauth1" />
	
</odoo>