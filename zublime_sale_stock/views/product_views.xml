<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
        <record id="product_normal_form_view_inherit" model="ir.ui.view">
            <field name="name">product.normal.form.inherit</field>
            <field name="model">product.product</field>
            <field eval="25" name="priority"/>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='group_standard_price']/div[@name='standard_price_uom']" position="after">
                    <field name="inoffer"/>
                </xpath>
            </field>
        </record>

        <record id="product_variant_easy_edit_view_inherit" model="ir.ui.view">
            <field name="name">product.variant.easy.edit.view.inherit</field>
            <field name="model">product.product</field>
            <field eval="25" name="priority"/>
            <field name="inherit_id" ref="product.product_variant_easy_edit_view"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='pricing']/field[@name='standard_price']" position="after">
                    <field name="inoffer"/>
                </xpath>
            </field>
        </record>

        <record id="product_template_only_form_view_inherit" model="ir.ui.view">
            <field name="name">product.template.product.only.form.inherit</field>
            <field name="model">product.template</field>
            <field name="priority" eval="8" />
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='group_standard_price']/div[@name='standard_price_uom']" position="after">
                    <field name="inoffer" attrs="{'invisible': [('product_variant_count', '>', 1)]}"/>
                </xpath>
            
            </field>
        </record>
    
</odoo>