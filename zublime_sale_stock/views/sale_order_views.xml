<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_stock_action_confirm" model="ir.ui.view">
        <field name="name">Warning</field>
        <field name="model">sale.stock.action.confirm</field>
        <field name="arch" type="xml">
            <form string="Parameters">
                <p>
                There are products without availability. Do you want to confirm this order?.
                </p>
                <footer>
                    <button name="action_confirm" string="To accept" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sale_stock_action_confirm" model="ir.actions.act_window">
        <field name="name">Warning</field>
        <field name="res_model">sale.stock.action.confirm</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{
                    'default_order_id': active_id,
                }
            </field>
    </record>
    <record id="sale_order_form_quote_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.quote.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//page/field[@name='order_line']/.." position="after">
                <page string="In Offer Products" name="inoffer_products" attrs="{'invisible': [('state', 'not in', ['draft', 'sent'])]}">
                    <field name="sale_order_inoffer_ids" mode="tree,form,kanban">
                        <form string="In Offer Products">
                            <group>
                                <field name="product_id" domain="[('sale_ok', '=', True), '|', ('company_id', '=', False), ('company_id', '=', parent.company_id)]"/>
                                <field name="name"/>
                                <field name="quantity"/>
                                <field name="product_uom_category_id" invisible="1"/>
                                <field name="uom_id" groups="uom.group_uom"/>
                                <field name="is_present" />
                            </group>
                        </form>
                        <kanban class="o_kanban_mobile">
                            <field name="product_id"/>
                            <field name="quantity"/>
                            <field name="uom_id" groups="uom.group_uom"/>
                            <field name="is_present" />
                            <templates>
                                <t t-name="kanban-box">
                                    <div class="oe_kanban_card oe_kanban_global_click">
                                        <div class="row">
                                            <div class="col-10">
                                                <strong>
                                                    <span>
                                                        <t t-esc="record.product_id.value"/>
                                                    </span>
                                                </strong>
                                            </div>
                                            <div class="col-2">
                                                <button name="button_add_to_order" class="btn btn-link oe_link fa fa-shopping-cart" title="Add to order lines" type="object" attrs="{'invisible': [('is_present', '=', True)]}"/>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-12 text-muted">
                                                <span>
                                                    Quantity:
                                                    <t t-esc="record.quantity.value"/>
                                                    <t t-esc="record.uom_id.value"/>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </t>
                            </templates>
                        </kanban>
                        <tree string="Sales Quotation Template Lines" editable="bottom" decoration-success="is_present == True" create="false" delete="false">
                            <field name="sequence" widget="handle"/>
                            <field name="product_id" domain="[('sale_ok', '=', True), '|', ('company_id', '=', False), ('company_id', '=', parent.company_id)]" readonly="1" force_save="1"/>
                            <field name="name" optional="show"/>
                            <field name="quantity"/>
                            <field name="uom_id" string="UoM" groups="uom.group_uom" optional="show"/>
                            <field name="product_uom_category_id" invisible="1"/>
                            <field name="is_present" invisible="1" />
                            <button name="button_add_to_order" icon="fa-shopping-cart" title="Add to order lines" type="object" attrs="{'invisible': [('is_present', '=', True)]}" options='{"warn": true}'/>
                        </tree>
                    </field>
                </page>
            </xpath>

        </field>
    </record>
</odoo>