<?xml version="1.0"?>
<odoo>

     <record id="res_config_settings_view_desc_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.desc</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='sale_management']/div[@id='pricing_setting_container']"
                   position="inside">
                 <div class="col-12 col-lg-6 o_setting_box"
                           id="discount1_subtotal_line">
                     <div class="o_setting_left_pane">
                          <field name="group_discount_price_max"/>
                     </div>
                     <div class="o_setting_right_pane">
                         <label for="group_discount_price_max"/>
                         <div class="text-muted">
                             Calculate discount by price max
                         </div>
                     </div>
                     <div class="o_setting_left_pane">
                          <field name="group_discount_subtotal"/>
                     </div>
                     <div class="o_setting_right_pane">
                         <label for="group_discount_subtotal"/>
                         <div class="text-muted">
                             Calculate discount by subtotal
                         </div>
                     </div>
                 </div>

            </xpath>
        </field>
    </record>

</odoo>
