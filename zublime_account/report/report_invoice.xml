<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_invoice_document_base" inherit_id="account.report_invoice_document">
             <xpath expr="//i" position="after">
                <t t-if="payment_vals['fee'] != 0">
                    <i class="oe_form_field text-right oe_payment_label"><br/>Commission payment method (<t t-esc="payment_vals['fee']"/> %) = <t t-esc="payment_vals['tariff']" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/></i>
                    <i class="oe_form_field text-right oe_payment_label"><br/>Total charged = <t t-esc="payment_vals['amount_fee']" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/></i>
                </t>
            </xpath>
            <xpath expr="//tr[@class='border-black o_total']" position="after">
                <tr class="border-black o_total">
                    <t t-if="o.is_the_pos==True">
                        <t t-if="o.extra_fee_comission > 0">
                            <tr>
                                <td>
                                    <i class="oe_form_field text-right oe_payment_label">Paid on
                                        <span class="text-nowrap" t-field="o.invoice_date"
                                              t-options='{"widget": "date"}'/>
                                    </i>
                                </td>
                                <td class="text-right">
                                    <span class="text-nowrap" t-field="o.total_pay"/>
<!--                                    <span class="text-nowrap" t-field="o.amount_total"/>-->
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <strong>Commission payment method (<span class="text-nowrap"
                                                                             t-field="o.extra_fee_comission"/>)% =
                                        <span class="text-nowrap" t-field="o.card_payment_commission"/>
                                    </strong>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <strong>Total charged =
                                        <span class="text-nowrap" t-field="o.total_pay"/>
                                    </strong>
                                </td>
                            </tr>
                            <tr class="border-black">
                                <td>
                                    <strong>Amount Due</strong>
                                </td>
                                <td class="text-right">
                                    <span t-field="o.amount_due_ext"/>
                                </td>
                            </tr>
                        </t>
                    </t>
                </tr>

            </xpath>
        </template>
    </data>
</odoo>