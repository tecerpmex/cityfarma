<odoo>
    <data>
		<record id="purchase_order_add_multi_item_form" model="ir.ui.view">
			<field name="name">purchase.order.addmulti.form</field>
			<field name="model">purchase.order</field>
			<field name="inherit_id" ref="purchase.purchase_order_form" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="attributes">
					<attribute name="options">{'create_row':True,'add_batch_out':True}</attribute>
				</xpath>
			</field>
		</record>
		<record id="sale_order_add_multi_item_form" model="ir.ui.view">
			<field name="name">sale.order.addmulti.form</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_order_form" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="attributes">
					<attribute name="options">{'create_row':True,'add_batch_out':True}</attribute>
				</xpath>
			</field>
		</record>  


		
    </data>
</odoo>